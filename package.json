{
  "name": "collaborative-canvas",
  "version": "1.0.0",
  "description": "Real-time collaborative drawing canvas using Node.js, Socket.IO, and Vanilla TypeScript.",
  "main": "server/server.js",
  "scripts": {
    "build:client": "tsc --project ./client/tsconfig.json",
    "start": "npm run build:client && node server/server.js",
    "dev": "npm run build:client && concurrently \"tsc -w --project ./client/tsconfig.json\" \"nodemon server/server.js\""
  },
  "keywords": [
    "websocket",
    "socket.io",
    "canvas",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "typescript": "^5.3.3"
  }
}